{% extends 'base.html.twig' %} {% block title %}Réinitialiser votre mot de
passe{% endblock %} {% block body %} {% for flash_error in
app.flashes('reset_password_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Réinitialiser votre mot de passe</h2>

          {{ form_start(requestForm, {'attr': {'class': 'mt-4'}}) }}
          <div class="mb-3">
            {{
              form_row(requestForm.email, {
                attr: {
                  class: "form-control my-2",
                  placeholder: "Votre adresse email"
                }
              })
            }}
          </div>
          <div class="my-3">
            <small
              >Saisissez votre adresse email, et nous vous enverrons un lien
              pour réinitialiser votre mot de passe.</small
            >
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">
              Envoyer l'email de réinitialisation du mot de passe
            </button>
          </div>
          {{ form_end(requestForm) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
