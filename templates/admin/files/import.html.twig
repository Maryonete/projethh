{% extends 'base.html.twig' %} {% block title %}Habitat et Humanisme{% endblock
%} {% block body %}

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 bordercolor rounded-3 p-5">
      <h2>
        Importer la liste des associations<br />
        à partir d'un fichier xlsx
      </h2>
     
      {{ form_start(form) }}

      {# Champ de dépôt de fichier avec Bootstrap #}
      <div class="form-group row">
        <label for="file" class="col-sm-2 col-form-label fas fa-file-excel">Fichier XLSX</label> <div class="col-sm-10">
          {{ form_widget(form.file, {'attr': {'class': 'form-control-file'}}) }}
          {{ form_errors(form.file) }}
        </div>
      </div>
      

      {# Bouton de soumission #}
      {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
      
      {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
