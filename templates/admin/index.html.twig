{% extends 'base.html.twig' %} {% block title %}Habitat Humanisme{% endblock %}
{% block body %}
<div class="container">
  <h1>MODULE D'AIDE POUR LA COLLECTE DE DON</h1>
</div>
<div class="b-example-divider"></div>
<div class="container px-4 py-5" id="featured-3">
  {% if campain is not empty %}
  <h2 class="pb-2 border-bottom">
    Campagne en cours -
    {{ campain.libelle }}
    <a
      href="{{ path('campains_result', { id: campain.id }) }}"
      class="btn btn-primary flex-grow-1 mx-2"
      ><i class="fas fa-chart-bar"></i
    ></a>
  </h2>
  <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
    <div class="feature col">
      <div class="feature-icon bg-primary bg-gradient">
        <svg class="bi" width="1em" height="1em">
          <use xlink:href="#collection"></use>
        </svg>
      </div>
      <h2>Actions</h2>
      <p>Email envoyé le {{ campain.datesend|date('d/m/Y')  }}</p>
      <p>
        destinataires : {% for destinataire in campain.destinataire %}
        {{ destinataire }}, {% endfor %}
      </p>
    </div>
    <div class="feature col">
      <div class="feature-icon bg-primary bg-gradient">
        <svg class="bi" width="1em" height="1em">
          <use xlink:href="#people-circle"></use>
        </svg>
      </div>
      <h2>{{ nbAssoCount }} Associations</h2>
      <p>{{ nbSentEmailsCount }} emails envoyés</p>
      <a href="#" class="icon-link">
        Call to action
        <svg class="bi" width="1em" height="1em">
          <use xlink:href="#chevron-right"></use>
        </svg>
      </a>
    </div>
    <div class="feature col">
      <div class="feature-icon bg-primary bg-gradient">
        <svg class="bi" width="1em" height="1em">
          <use xlink:href="#toggles2"></use>
        </svg>
      </div>
      <h2>Featured title</h2>
      <p>
        Paragraph of text beneath the heading to explain the heading. We'll add
        onto it with another sentence and probably just keep going until we run
        out of words.
      </p>
      <a href="#" class="icon-link">
        Call to action
        <svg class="bi" width="1em" height="1em">
          <use xlink:href="#chevron-right"></use>
        </svg>
      </a>
    </div>
    {% else %} pas de campagne en cours {% endif %}
  </div>
</div>
<div class="b-example-divider"></div>
<div class="container px-4 py-5" id="featured-3">
  <h2 class="pb-2 border-bottom">----</h2>
  <div class="table-responsive"></div>
</div>
<div class="b-example-divider"></div>
{% endblock %}
