<h1 class="pb-2 border-bottom d-flex justify-content-between">
  Présidents
  <a href="{{ path('president_new') }}"><i class="fas fa-plus"></i></a>
</h1>

<table class="table table-striped table-hover sortTable" id="presidentList">
  <thead>
    <tr>
      <th>Prénom Nom</th>
      <th>Association</th>
    </tr>
  </thead>
  <tbody>
    {% for president in presidents %}
    <tr>
      <td>{{ president.user.firstname }} {{ president.user.lastname }}</td>
      <td>
        {% if president.association is not empty %}
        {{ president.association.libelle }}
        {% endif %}
      </td>
      <td>
        <a href="{{ path('president_show', { id: president.id }) }}"
          ><i class="fa-solid fa-eye"></i
        ></a>
      </td>
      <td>
        <a href="{{ path('president_edit', { id: president.id }) }}"
          ><i class="fa-solid fa-pen"></i
        ></a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="4">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<script>
  $(document).ready(function () {
    $("#presidentList").DataTable({
      order: [0, "asc"],
      searching: true,
      info: false,
      paging: false,
      language: {
        sSearch: "<i class='fas fa-search'></i>",
      },
      columns: [null, null, { orderable: false }, { orderable: false }],
      // searchDelay: 300, // Délai avant la prise en compte de la recherche pour éviter un filtrage excessif
    });
  });
</script>
