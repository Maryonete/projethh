{% extends 'base.html.twig' %} {% block title %}Campains{% endblock %} {% block
body %}
<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h1>Campagne</h1>

          <table class="table">
            <tbody>
              <tr>
                <th>Id</th>
                <td>{{ campain.id }}</td>
              </tr>
              <tr>
                <th>Libellé</th>
                <td>{{ campain.libelle }}</td>
              </tr>
              <tr>
                <th>Date de début</th>
                <td>
                  {{ campain.date ? campain.date|date('d-m-Y') : '' }}
                </td>
              </tr>
              <tr>
                <th>Destinataire</th>
                <td>{{ campain.destinataire ?: '-' }}</td>
              </tr>
              <tr>
                <th>Email de l'expéditeur</th>
                <td>{{ campain.email_from ?: '-' }}</td>
              </tr>
              <tr>
                <th>Email en copie</th>
                <td>{{ campain.email_cc ?: '-' }}</td>
              </tr>
              <tr>
                <th>Objet de l'email</th>
                <td>{{ campain.objet_email ?: '-' }}</td>
              </tr>
              <tr>
                <th>Texte de l'email</th>
                <td>{{ campain.texte_email ?: '-' }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-6">
          <div class="d-flex justify-content-between">
            <a href="{{ path('campains_index') }}" class="btn btn-primary"
              >Retour à la liste</a
            >
            <a
              href="{{ path('campains_edit', { id: campain.id }) }}"
              class="btn btn-primary"
              >Modifier</a
            >
            <a
              href="{{ path('campains_play', { id: campain.id }) }}"
              class="btn btn-primary"
            >
              <i class="fas fa-play"></i>Lancer la campagne</a
            >
            <!-- {{ include("admin/campains/_delete_form.html.twig") }} -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
