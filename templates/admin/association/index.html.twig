{% extends 'base.html.twig' %} {% block title %}Association index{% endblock %}
{% block body %}
<div class="container">
  <h1>Association index</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Code</th>
        <th>Libelle</th>
        <th>Adress</th>
        <th>Cp</th>
        <th>City</th>
        <th>Tel</th>
        <th>Email</th>
        <th>Donation_call_text</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for association in associations %}
      <tr>
        <td>{{ association.id }}</td>
        <td>{{ association.code }}</td>
        <td>{{ association.libelle }}</td>
        <td>{{ association.adress }}</td>
        <td>{{ association.cp }}</td>
        <td>{{ association.city }}</td>
        <td>{{ association.tel }}</td>
        <td>{{ association.email }}</td>
        <td>{{ association.donationCallText }}</td>
        <td>
          <a href="{{ path('asso_show', { id: association.id }) }}">show</a>
          <a href="{{ path('asso_edit', { id: association.id }) }}">edit</a>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="10">no records found</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('asso_new') }}" class="btn btn-primary"
    >Cr√©ation association</a
  >
</div>
{% endblock %}
