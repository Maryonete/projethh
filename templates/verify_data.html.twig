{% extends 'base.public.html.twig' %} {% block title %}Habitat Humanisme{%
endblock %} {% block javascripts %}

<script src="/bundles/tinymce/ext/tinymce/tinymce.min.js"></script>
{{ parent() }}
<script>
  tinymce.init({
    selector: "textarea#campain_association_texte_personnalise",
    plugins: "image lists link anchor charmap ",
    toolbar:
      "blocks | bold italic bullist numlist | link image charmap | custombutton",
    menubar: false,
  });
</script>
{% endblock %}{% block body %}
<div class="container">
  <header
    class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom"
  >
    <div class="col-md-3 mb-2 mb-md-0">
      <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
        <img
          src="{{ asset('build/images/logo.svg') }}"
          alt="Logo HH"
          height="40"
        />
      </a>
    </div>
  </header>
  <main>
    <div class="card">
      <div class="card-body">
        <div class="row g-5">
          <div class="col-md-10 offset-md-1">
            <h1>
              {{ campAsso.campains.libelle }}
              <!-- {{ dump(campAsso) }} -->
            </h1>
            <h2>{{ campAsso.association.libelle }}</h2>
            {{ form_start(form) }}
            <div class="row p-5 mb-4 bg-light rounded-3">
              <h2>Référent(e)</h2>
              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.referent.user.firstname) }}
                  {{ form_widget(form.association.referent.user.firstname) }}
                  {{ form_errors(form.association.referent.user.firstname) }}
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.referent.user.lastname) }}
                  {{ form_widget(form.association.referent.user.lastname) }}
                  {{ form_errors(form.association.referent.user.lastname) }}
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.referent.user.email) }}
                  {{ form_widget(form.association.referent.user.email) }}
                  {{ form_errors(form.association.referent.user.email) }}
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.referent.tel) }}
                  {{ form_widget(form.association.referent.tel) }}
                  {{ form_errors(form.association.referent.tel) }}
                </div>
              </div>
            </div>

            <div class="row p-5 mb-4 bg-light rounded-3">
              <h2>Adresse</h2>
              <div class="col-md-12">
                <div class="form-group">
                  {{ form_label(form.association.adress) }}
                  {{ form_widget(form.association.adress) }}
                  {{ form_errors(form.association.adress) }}
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.cp) }}
                  {{ form_widget(form.association.cp) }}
                  {{ form_errors(form.association.cp) }}
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.city) }}
                  {{ form_widget(form.association.city) }}
                  {{ form_errors(form.association.city) }}
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.tel) }}
                  {{ form_widget(form.association.tel) }}
                  {{ form_errors(form.association.tel) }}
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.association.email) }}
                  {{ form_widget(form.association.email) }}
                  {{ form_errors(form.association.email) }}
                </div>
              </div>
            </div>
            <div class="row p-5 mb-4 bg-light rounded-3">
              <h2>Présentation association</h2>
              <div class="col-md-12 mt-4">
                <div class="form-group">
                  <h3>Ancien texte de présentation</h3>
                  {{ campAsso.campains.oldcampain.libelle }}
                  <div class="card bg-light">
                    <div class="card-body">
                      {% if oldCampainAssociations is not empty %}
                      {{ oldCampainAssociations.textepersonnalise | raw }}
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-12 mt-4">
                <div class="form-group">
                  <h3>
                    {{ form_label(form.texte_personnalise) }}
                    {{ campAsso.campains.libelle }}
                  </h3>
                  {{ form_widget(form.texte_personnalise) }}
                  {{ form_errors(form.texte_personnalise) }}
                </div>
              </div>
            </div>
            <div class="row mt-3">
              <div class="col-12 text-center">
                <b class="text-danger"
                  >Attention, vous ne pourrez plus modifier après validation du
                  formulaire</b
                >
                <br />
                <button type="submit" class="btn btn-primary mt-2">
                  Valider
                </button>
              </div>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
{% endblock %}
